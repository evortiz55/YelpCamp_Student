<%- include ("partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Register to Yelp Camp!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="register" method="POST">
                <div class="form-group">
                    <input required class="form-control" type="text" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <input required class="form-control" type="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Sign Up!</button>
                </div>
            </form>
        </div>
    </div>
</div>
</form>
<%- include ("partials/footer") %>