<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Review: <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" rows="5" placeholder="Your kind comments start here..."></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>  
</div>
<%- include ("../partials/footer") %>
